<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="fatec.controllers.RepteisController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Cadastro de RÃ©ptil" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane vgap="10" hgap="10">
        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Idade:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtIdade" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Peso:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtPeso" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Tipo de Pele:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtTipoPele" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <CheckBox fx:id="chkEscamas" text="Tem Escamas" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Criar" onAction="#CriarOnAction" fx:id="btnCriar" />
        <Button text="Cadastro" onAction="#CadastroOnAction" fx:id="btnCadastro" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Fazer Som" onAction="#SomOnAction" fx:id="btnSom" />
        <Button text="Trocar Pele" onAction="#TrocarPeleOnAction" fx:id="btnTrocarPele" />
        <Button text="Tomar Sol" onAction="#TomarSolOnAction" fx:id="btnTomarSol" />
    </HBox>

    <Button text="Voltar" onAction="#VoltarOnAction" fx:id="btnVoltar" />
</VBox> 